{
  "name": "uni-tracker",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist-server/server.js",
    "dev": "npm run build:server && concurrently \"npm run dev:server\" \"vite\"",
    "dev:server": "tsx watch server.ts",
    "build": "tsc && vite build && npm run build:server",
    "build:server": "tsc server.ts --outDir dist-server --module esnext --moduleResolution node --target es2022 --esModuleInterop --skipLibCheck",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  }
}
